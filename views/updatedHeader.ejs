<div class="flex flex-col gap-2 w-full bg-gradient-to-tl from-white to-white ">
  <div class="flex flex-col justify-center items-center text-blue-800">
    <%- include ('header') %>
  </div>
  <div class="text-black flex flex-col justify-between items-center ">
    <div class="flex flex-col md:w-2/5 w-full">
      <div class="flex justify-between w-full">
        <div class="flex justify-center items-center gap-2">
          <i class="fa fa-user flex items-center justify-center"></i>
          <p class="font-semibold text-xl flex items-center justify-center">
            <%= username %>
          </p>
        </div>
        <div class="flex gap-4">
          <a
            class="text-white px-6 bg-blue-500 hover:bg-blue-700 transition duration-200 border-2 border-blue-700 p-2 rounded-lg"
            href="/home"
            >Back</a
          >
          <a
            class="text-white-500 px-6 bg-blue-500 hover:bg-green-100 transition duration-200 border-2 border-red-500 p-2 rounded-lg"
            href="/signout"
            >Sign Out</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
