<html>
  <head>
    <title>Log In</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div style="background-image:url('https://images.pexels.com/photos/8850706/pexels-photo-8850706.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'); background-repeat: no-repeat; background-attachment: fixed;background-size: 100% 100%;" 
    class="w-full min-h-screen">
    <div class="flex justify-center"><%- include ('header') %></div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-1/5 w-full">
        <h1 class="text-2xl text-red-900 flex justify-center font-semibold">Log In Page</h1>
        <form action="/session" method="post" class="flex flex-col gap-4 pt-6">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <div class="flex flex-col">
            <label for="email">Email</label>
            <input
              class="border-2 border-black p-2 rounded-lg"
              type="text"
              name="email"
              id="email"
              placeholder="name@gmail.com"
            />
          </div>
          <div class="flex flex-col">
            <label for="password">Password</label>
            <input
              class="border-2 border-black p-2 rounded-lg"
              type="password"
              name="password"
              id="password"
              placeholder="***********"
            />
          </div>
          <button
            class="bg-blue-500 border-2 border-blue-800 flex justify-center hover:bg-blue-700 text-white font-bold p-1 rounded-lg w-full mt-8"
            type="submit"
          >
            Log In
          </button>
        </form>

        <!-- flash message -->
        <div class="flex flex-col justify-center items-center gap-3 ">
          <% if (messages && messages.error && messages.error.length > 0) { %>
            <% for(var i=0; i<messages.error.length; i++) {%>
              <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.error[i] %></div>
            <% } %>
          <% } %>
        </div>

        <div class="flex flex-col justify-center pt-4 items-center">
          <p>New User?</p>
          <a
          class="bg-blue-500 border-2 border-blue-800 flex justify-center hover:bg-blue-700 text-white font-bold p-1 rounded-lg w-full mt-8"
          href="/signup"
            >Sign Up</a
          >
        </div>
      </div>
    </div>
    </div>
  </body>
</html>
