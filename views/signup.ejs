<html>
  <head>
    <title>Sign Up</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div style="background-image:url('https://www.coe.int/documents/14181903/15917751/logo-vote-2022.jpg/532b2399-6926-9fca-a87d-fd2d59f1ccb7?t=1654677562000'); background-repeat: no-repeat; background-attachment: fixed;background-size: 100% 100%;" 
    class="w-full min-h-screen ">
    <div class=" w-full min-h-screen flex flex-col backdrop-blur-sm">
    <div class="flex justify-center"><%- include ('header') %></div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-1/5 w-full">
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-600 justify-center">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8 justify-center">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-white md:text-2xl dark:text-white">Create a New Account</h1>
        <form action="/users" method="post" class="flex flex-col gap-4 pt-6">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <div class="flex flex-col">
            <label for="name" class="block mb-2 text-sm font-medium text-white dark:text-white">Name</label>
            <input
              type="text"
              name="name"
              class="bg-white-50 border border-white-300 text-white-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-white-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="Enter Name" 
              />
          </div>
          <div class="flex flex-col">
            <label for="email"class="block mb-2 text-sm font-medium text-white dark:text-white">Email</label>
            <input
              type="text"
              name="email"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-white-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="name@gmail.com" />
          </div>
          <div class="flex flex-col">
            <label for="password" class="block mb-2 text-sm font-medium text-white dark:text-white">Password</label>
            <input
              type="password"
              name="password"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-white-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="*********" 
               />
          </div>
          <button
            type="submit"
            class="bg-blue-500 border-2 border-blue-800 flex justify-center hover:bg-blue-700 text-white font-bold p-1 rounded-lg w-full mt-8"
          >
            Sign Up
          </button>
        </form>

        <!-- flash message -->
        <div class="flex flex-col justify-center items-center gap-3 ">
          <% if (messages && messages.error && messages.error.length > 0) { %>
            <% for(var i=0; i<messages.error.length; i++) {%>
              <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.error[i] %></div>
            <% } %>
          <% } %>
        </div>

        <div class="flex flex-col justify-center pt-4 items-center block mb-2 text-sm font-bold text-white dark:text-white">
          <p>Already have an account?</p>
          <a href="/login" class="font-medium text-green-600 hover:underline dark:text-primary-500">Login here</a>
                              </div>
      </div>
    </div>
    </div>
    </div>
    </div>
  </div>
  </body>
</html>
